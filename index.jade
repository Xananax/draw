				padding-right 2.5em
				color white
				font-weight bold
				font-family Arial, sans-serif
				&:after
					content 'x'
					font-size 1.2em
					text-shadow 0px 0px 3px #000
			.optionTrigger
				padding .3em
				margin .3em
				background white
				&:checked
					background #F3EAE2
			getColWidth(c,m)
				c = unit(c,'')
				m = unit(m,'')
				doubleMargin = ((m*2))
				marginsTotal = doubleMargin * c
				remainder = (100 - marginsTotal)
				width unit(remainder/c,'%')
				margin unit(m,'%')
			.thumbnail
				display inline-block
				getColWidth(5,0.3)
				max-width thumbSize 
				position relative
				background #ccc
				box-sizing border-box
				border .3em solid white
				margin .3%
				overflow hidden
