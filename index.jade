				}
				99%{
					padding-bottom 100%
				}
				100%{
					padding-bottom 0
				}
			@keyframes spin
				0%{transform:rotate(0deg);}
				100%{transform:rotate(360deg);}
			@keyframes scaleIn
				from {
					visibility hidden
					transform scale(1.2)
					opacity 0
					top 0
				}
				to {
					visibility visible
					transform scale(1)
					opacity 1
					top 0
				}
			@keyframes scaleOut
				0% {
					visibility visible
					transform scale(1)
					opacity 1
					top 0
				}
				100% {
					opacity 0
					transform scale(.7)
					top -100%
					visibility hidden
				}
