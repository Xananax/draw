				height 100%
				overflow hidden
				position absolute
				overflow-y scroll
				img
					display inline-block
					vertical-align middle
					max-width 100%
					min-width 10%
					transition min-width 1s
			.galleryNextPrevious
				position absolute
				top 0
				left 0
				right 0
				bottom 0
			.triggerPreviousImage,.triggerNextImage
				@extend $galleryControl
			.triggerPreviousImage
